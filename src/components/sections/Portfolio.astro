---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
import BtnLink from "../shared/BtnLink.astro";
---

<section>
    <Container className="space-y-8">
        <div class=" max-w-full ml-4 mx-auto mb-[100px]  text-center">
            <Title>
                <b>Clientes </b>que nos eligen
            </Title>
        </div>
        <div class="grid grid-cols-5 gap-4">
            <div class="flex justify-center items-center w-full h-auto p-4 border border-gray-300 rounded-lg shadow-md dark:bg-gray-200">
                <a href="https://wanderlust-phi.vercel.app" class="hover-image">
                    <img src="https://i.postimg.cc/d0kJj9Hy/wanderlust-name-removebg-preview.png" alt="Imagen 1">
                </a>
            </div>
            <div class="dark:bg-green-600 bg-green-600 flex justify-center items-center w-full h-full p-4 border border-gray-300 rounded-lg shadow-md ">
                
                <a href="https://agroseedservicios.com" class="hover-image">
                    <img src="https://i.postimg.cc/qvZkKFLr/agrosed-name-removebg-preview.png" alt="Imagen 2">
                </a>
            </div>
            <div class="flex justify-center items-center w-full h-full p-4 border border-gray-300 rounded-lg shadow-md dark:bg-gray-200">
                
                <a href="https://crossing-borders.netlify.app/" class="hover-image">
                    <img src="https://i.postimg.cc/Lsc2CZw0/Crossing-borders-removebg-preview.png" alt="Imagen 3">
                </a>
            </div>
            <div class="flex justify-center items-center w-full h-full p-4 border border-gray-300 rounded-lg shadow-md dark:bg-gray-200">
                <a href="https://www.hieloyelito.com/" class="hover-image">
                    
                    <img src="https://i.postimg.cc/K8YGRbtQ/Yelito-name-removebg-preview.png" alt="Imagen 4">
                </a>
            </div>
            <div class="bg-red-600 flex justify-center items-center w-full h-full p-4 border border-gray-300 rounded-lg shadow-md dark:bg-red-600">
                <a href="https://www.stop.com.ar/" class="hover-image">
                    
                    <img src="https://i.postimg.cc/gJ3df2Pc/stop-name-removebg-preview.png" alt="Imagen 5">
                </a>
            </div>
        </div>
        <div class="flex flex-col justify-center items-center ">
            <Title  >
                Quieres ser uno de <span class="font-bold">ellos</span>?
            </Title>
            <div class="lg:min-w-max p-4 flex items-center sm:w-max w-full pb-6 lg:pb-0 border-b border-box-bg lg:border-0 px-6 lg:px-0">
                <BtnLink text="Comienza Gratis" href="#cta" className="flex justify-center w-full sm:w-max" variant="primary"/>
            </div>
            
            
              
            
            
        </div>
        
        
        
    </Container>
    
</section>


<style>
    .hover-image {
  transition: transform 0.3s ease;
}

.hover-image:hover img {
  transform: scale(1.1) rotateY(20deg);
}


</style>
