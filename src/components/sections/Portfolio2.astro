---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";
---

<section id="portfolio">
  <Container className="space-y-10 md:sapce-y-12">
    <div class="text-center max-w-3xl mx-auto">
      <Title>Portfolio</Title>
    </div>

    <div class="w-full overflow-hidden relative">
      <div class="flex overflow-hidden">
        <img class="w-screen h-600 object-cover animate-carousel" src="https://res.cloudinary.com/dxsosgojl/image/upload/v1697486015/PortfolioWebWizard/Desing-removebg-preview_xz6mxj.png" alt="">
        <img class="w-screen h-600 object-cover animate-carousel" src="https://res.cloudinary.com/dxsosgojl/image/upload/v1697485934/PortfolioWebWizard/Moda-removebg-preview_zfuqpn.png" alt="">
        <img class="w-screen h-600 object-cover animate-carousel" src="https://res.cloudinary.com/dxsosgojl/image/upload/v1697485933/PortfolioWebWizard/Dash_1-removebg-preview_ybeqkg.png" alt="">
        <img class="w-screen h-600 object-cover animate-carousel" src="https://res.cloudinary.com/dxsosgojl/image/upload/v1697485932/PortfolioWebWizard/Sport-removebg-preview_kf9azl.png" alt="">
